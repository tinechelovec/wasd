        <TextBlock Text="да?"></TextBlock>
            <RadioButton Name="radioBtn8" GroupName="Test3" Content="да"/>
            <RadioButton Name="radioBtn9" GroupName="Test3" Content="нет"/>
            <RadioButton Name="radioBtn10" GroupName="Test3" Content="кто создал это?"/>
            <Separator/>
            <TextBlock Text="молодежная столица?"></TextBlock>
            <RadioButton Name="radioBtn11" GroupName="Test4" Content="чебоксары"/>
            <RadioButton Name="radioBtn12" GroupName="Test4" Content="Крунг-Тхеп-Маха-Накхон"/>
            <RadioButton Name="radioBtn13" GroupName="Test4" Content="ну может быть владивосток"/>
